@model MovieSite.Models.ViewModels.SharedIndexViewModel
@{
    ViewBag.Title = "Login";
}
<link rel="stylesheet" href="../Content/stylesheet.css" type="text/css">
<div class="EnterInfoView">
    <h3>Inloggen</h3>
    @if (Model != null)
     {
        <div class="ErrorMessage">
            @Model.AccountViewModel.Message
        </div>
     }
    <form method="post" action="@Url.Action("LoginUser","Account")">
        <div class="EnterInfoViewDivs">
            <label>Username</label>
            <input type="text" name="Name" placeholder="Enter Username" required>
        </div>
        <div class="EnterInfoViewDivs">
            <label>Password</label>
            <input type="password" name="Password" placeholder="Enter Password" required>
        </div>
        <div>
            <label style="margin-right:40%">
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
            <button class="likebtn" style="float:left; margin-top:50px">Login</button>
        </div>
    </form>
    <form action="@Url.Action("Index", "Account")">
        <button class="cancelbtn" action="@Url.Action("Index", "Account")">Cancel</button>
    </form>
</div>


